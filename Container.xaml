<Window x:Class="Kids_Pocket_money.Container"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kids_Pocket_money"
        xmlns:mainViewModel="clr-namespace:Kids_Pocket_money.ViewModels"
        xmlns:mainView="clr-namespace:Kids_Pocket_money.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type mainViewModel:MainViewModel}">
            <mainView:MainControl />
        </DataTemplate>
    </Window.Resources>

    <ContentPresenter Content="{Binding ContainerContent}" />


</Window>
