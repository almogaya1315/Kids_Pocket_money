<UserControl x:Class="Kids_Pocket_money.Views.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Kids_Pocket_money.Views"
             mc:Ignorable="d"
             Height="320"
             Width="670">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50px" />
                <RowDefinition Height="200px" />
                <RowDefinition Height="50px" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="20*" />
                <ColumnDefinition Width="40*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Chores"
                       FontSize="20"
                       FontWeight="Bold" />
            <ListBox Grid.Row="1"
                     x:Name="ChoresListBox"
                     Height="190"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     ItemsSource="{Binding Chores}"
                     DisplayMemberPath="Name" />

            <TextBlock Grid.Column="2"
                       Text="Kids"
                       FontSize="20"
                       FontWeight="Bold" />
            <ListBox Grid.Row="1"
                     Grid.Column="2"
                     x:Name="KidsListBox"
                     Height="190"
                     Width="250"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     ItemsSource="{Binding Children}"
                     DisplayMemberPath="Name"/>

            <Button Content="Assign"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="AssignChore_Click"
                    Height="40"
                    Margin="25"
                    VerticalAlignment="Top" />

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal">
                <Button Content="Edit Data"
                        Click="EditData_Click"
                        Height="40" 
                        FontWeight="Bold"
                        Padding="10,0,10,0"
                        Margin="0,0,5,0"/>

                <Button Content="Chores Tracking"
                        Click="ChoresTracking_Click"
                        Height="40"
                        FontWeight="Bold"
                        Padding="10,0,10,0"
                        Margin="0,0,5,0" />
            </StackPanel>

        </Grid>
    </Border>



    <!--<Border>
        <DataGrid AutoGenerateColumns="false"
                  ItemsSource="{Binding Children}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="name"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="age"
                                    Binding="{Binding Age}" />
            </DataGrid.Columns>
        </DataGrid>
    </Border>-->
</UserControl>
