<UserControl x:Class="Kids_Pocket_money.Views.EditData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Kids_Pocket_money.Views"
             mc:Ignorable="d"
             Height="320"
             Width="670">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="200" />
                <RowDefinition Height="30" />
                <RowDefinition Height="65" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>


            <TextBlock Text="Chores"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,0"/>
            <DataGrid Grid.Row="1"
                      x:Name="ChoresGrid"
                      ItemsSource="{Binding Chores}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0,0,5,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        Width="*" />
                    <DataGridTemplateColumn Header="Actions"
                                            Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit"
                                            Click="EditChore_Click"
                                            Margin="2" />
                                    <Button Content="Del"
                                            Click="DeleteChore_Click"
                                            Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Grid.Row="2"
                    Content="Add Chore"
                    Click="AddChore_Click"
                    Margin="0,2,5,5" />

            <TextBlock Grid.Column="1"
                       Text="Kids"
                       FontSize="20"
                       FontWeight="Bold" />
            <DataGrid Grid.Row="1"
                      Grid.Column="1"
                      x:Name="KidsGrid"
                      ItemsSource="{Binding Children}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        Width="*" />
                    <DataGridTemplateColumn Header="Actions"
                                            Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Edit"
                                            Click="EditKid_Click"
                                            Margin="2" />
                                    <Button Content="Del"
                                            Click="DeleteKid_Click"
                                            Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Content="Add Kid"
                    Click="AddKid_Click"
                    Margin="0,2,0,5" />

            <Border BorderThickness="0,1,0,0"
                    BorderBrush="Black"
                    Margin="0,2,0,0"
                    Grid.ColumnSpan="2"
                    Grid.Row="6" />

            <Button Grid.Row="6"
                    Content="Back"
                    Click="BackToMain_Click"
                    Height="40"
                    Width="50"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10" />
        </Grid>
    </Border>
</UserControl>
